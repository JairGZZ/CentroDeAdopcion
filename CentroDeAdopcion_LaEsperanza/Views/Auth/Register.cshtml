@model CentroDeAdopcion_LaEsperanza.ViewModels.UsuarioViewModel

@{
    ViewData["Title"] = "Registro";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-success text-white text-center">
                        <h3>Registro de Usuario</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group mb-3">
                                <label for="nombre">Nombre</label>
                                <input type="text" class="form-control" id="nombre" name="Nombre" placeholder="Introduce tu nombre" asp-for="Nombre" required  >
                            </div>
                            <div class="form-group mb-3">
                                <label for="apellido">Apellido</label>
                                <input type="text" class="form-control" id="apellido" name="Apellido" placeholder="Introduce tu apellido" required asp-for="Apellido">
                            </div>
                            <div class="form-group mb-3">
                                <label for="email">Correo Electrónico</label>
                                <input type="email" class="form-control" id="email" name="Email" placeholder="Introduce tu correo electrónico" required asp-for="Email">
                            </div>
                            <div class="form-group mb-3">
                                <label for="telefono">Teléfono</label>
                                <input type="text" class="form-control" id="telefono" name="Telefono" placeholder="Introduce tu teléfono" required asp-for="Telefono">
                            </div>

                            <div class="form-group mb-3">
                                <label for="direccion">Dirección</label>
                                <input type="text" class="form-control" id="direccion" name="Direccion" placeholder="Introduce tu dirección" required asp-for="Direccion">
                            </div>
                            <div class="form-group mb-3">
                                <label for="rol">Rol</label>
                                <select class="form-control" id="rol" required name="Rol" asp-for="Rol">
                                    <option value="adoptante">Adoptante</option>
                                    <option value="propietario">Propietario</option>
                                </select>
                            </div>
                            <div class="form-group mb-3">
                                <label for="contrasena">Contraseña</label>
                                <input type="password" class="form-control" id="contrasena" name="Contrasena" placeholder="Introduce tu contraseña" required asp-for="Contrasena">
                            </div>

                            <div class="form-group mb-3">
                                <label for="contrasena">Contraseña</label>
                                <input type="password" class="form-control" id="contrasena" name="ConfirmarContrasena" placeholder="Confirma tu Contraseña" required asp-for="ConfirmarContrasena">
                            </div>

                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-success w-100">Registrar</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <p>¿Ya tienes cuenta? <a href="@Url.Action("Login", "Auth")">Inicia sesión aquí</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
