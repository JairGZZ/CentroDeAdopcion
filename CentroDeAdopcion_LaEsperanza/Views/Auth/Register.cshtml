@model CentroDeAdopcion_LaEsperanza.ViewModels.UsuarioViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Libreria_Online</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Libreria_Online.styles.css" asp-append-version="true" />
</head>
<body>
    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Registro de Usuario</p>

                                    <form asp-action="Register" asp-controller="Auth" method="post" class="mx-1 mx-md-4">

                                        <div class="form-group mb-4">
                                            <label for="Nombre">Nombre</label>
                                            <input type="text" class="form-control" id="Nombre" name="Nombre" asp-for="Nombre" placeholder="Introduce tu nombre" required />
                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                        </div>

                                        <div class="form-group mb-4">
                                            <label for="Apellido">Apellido</label>
                                            <input type="text" class="form-control" id="Apellido" name="Apellido" asp-for="Apellido" placeholder="Introduce tu apellido" required />
                                            <span asp-validation-for="Apellido" class="text-danger"></span>
                                        </div>

                                        <div class="form-group mb-4">
                                            <label for="Email">Correo Electrónico</label>
                                            <input type="email" class="form-control" id="Email" name="Email" asp-for="Email" placeholder="Introduce tu correo electrónico" required />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-group mb-4">
                                            <label for="Telefono">Teléfono</label>
                                            <input type="text" class="form-control" id="Telefono" name="Telefono" asp-for="Telefono" placeholder="Introduce tu teléfono" required />
                                            <span asp-validation-for="Telefono" class="text-danger"></span>
                                        </div>

                                        <div class="form-group mb-4">
                                            <label for="Direccion">Dirección</label>
                                            <input type="text" class="form-control" id="Direccion" name="Direccion" asp-for="Direccion" placeholder="Introduce tu dirección" required />
                                            <span asp-validation-for="Direccion" class="text-danger"></span>
                                        </div>

                                        <div class="form-group mb-4">
                                            <label for="Rol">Rol</label>
                                            <select class="form-control" id="Rol" name="Rol" asp-for="Rol" required>
                                                <option value="adoptante">Adoptante</option>
                                                <option value="propietario">Propietario</option>
                                            </select>
                                            <span asp-validation-for="Rol" class="text-danger"></span>
                                        </div>

                                        <div class="form-group mb-4">
                                            <label for="Contrasena">Contraseña</label>
                                            <input type="password" class="form-control" id="Contrasena" name="Contrasena" asp-for="Contrasena" placeholder="Introduce tu contraseña" required />
                                            <span asp-validation-for="Contrasena" class="text-danger"></span>
                                        </div>

                                        <div class="form-group mb-4">
                                            <label for="ConfirmarContrasena">Confirma tu Contraseña</label>
                                            <input type="password" class="form-control" id="ConfirmarContrasena" name="ConfirmarContrasena" asp-for="ConfirmarContrasena" placeholder="Confirma tu contraseña" required />
                                            <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
                                        </div>

                                        <div class="form-group text-center">
                                            <button type="submit" class="btn btn-primary btn-lg">Registrar</button>
                                        </div>
                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Imagen de registro">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
