@model CentroDeAdopcion_LaEsperanza.Models.Mascota

@{
    ViewData["Title"] = "Crear Mascota";
}

<style>
    body,
    .app-content {
        overflow-x: hidden;
        /* Elimina la barra de scroll horizontal */
    }

    .form-container {
        max-width: 100%;
        /* Asegura que el contenedor no se desborde */
        padding: 15px;
        /* Ajusta los paddings para que se vea bien */
        margin: 0 auto;
        /* Centra el formulario en la pantalla */
    }

    .form-container input,
    .form-container label {
        word-wrap: break-word;
        /* Evita que el contenido se desborde */
    }
</style>

<div class="app-content">
    <div class="app-content-header">
        <h1 class="app-content-headerText text-white">Crear Nueva Mascota</h1>
    </div>

    <div class="products-area-wrapper formView">
        <div class="form-container">
            <form asp-action="Create" method="post" enctype="multipart/form-data" class="form-style">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Fila de campos: Nombre y Tipo -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label text-white">Nombre</label>
                            <input asp-for="Nombre" class="form-control text-white bg-dark" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Tipo" class="control-label text-white">Tipo</label>
                            <select asp-for="Tipo" class="form-control bg-dark text-white">
                                <option value="gato">Gato</option>
                                <option value="perro">Perro</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Fila de campos: Raza y Edad -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Raza" class="control-label text-white">Raza</label>
                            <input asp-for="Raza" class="form-control text-white bg-dark" />
                            <span asp-validation-for="Raza" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Edad" class="control-label text-white">Edad</label>
                            <input asp-for="Edad" class="form-control text-white bg-dark" type="number" />
                            <span asp-validation-for="Edad" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Fila de campos: Tamaño y Sexo -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Tamaño" class="control-label text-white">Tamaño</label>
                            <select asp-for="Tamaño" class="form-control bg-dark text-white">
                                <option value="pequeño">Pequeño</option>
                                <option value="mediano">Mediano</option>
                                <option value="grande">Grande</option>
                            </select>
                            <span asp-validation-for="Tamaño" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Sexo" class="control-label text-white">Sexo</label>
                            <select asp-for="Sexo" class="form-control bg-dark text-white">
                                <option value="macho">Macho</option>
                                <option value="hembra">Hembra</option>
                            </select>
                            <span asp-validation-for="Sexo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Fila de campos: EstadoSalud y Foto -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="EstadoSalud" class="control-label text-white">Estado de Salud</label>
                            <input asp-for="EstadoSalud" class="form-control text-white bg-dark" />
                            <span asp-validation-for="EstadoSalud" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="fotoFile" class="control-label text-white">Foto</label>
                            <input type="file" id="fotoFile" name="fotoFile" class="form-control text-white bg-dark" />
                            <span asp-validation-for="Foto" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Botón de envío -->
                <div class="form-group text-center mt-4">
                    <input type="submit" value="Crear" class="btn btn-success btn-lg app-content-headerButton" />
                </div>
            </form>

            <!-- Botón para volver -->
            <div class="text-center mt-4">
                @if (User.IsInRole("propietario"))
                {
                    <a asp-action="ListarMascotasPropietario" class="btn btn-secondary app-content-headerButton">Volver al
                        listado</a>
                }
                else
                {
                    <a asp-action="Index" class="btn btn-secondary app-content-headerButton">Volver al listado</a>
                }
            </div>
        </div>
    </div>
</div>
