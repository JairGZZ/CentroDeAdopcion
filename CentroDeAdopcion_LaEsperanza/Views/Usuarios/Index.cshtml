@model IEnumerable<CentroDeAdopcion_LaEsperanza.Models.Usuario>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<div class="app-content">
    <div class="app-content-header">
        <h1 class="app-content-headerText text-white">Listado de Usuarios</h1>
    </div>

    <div class="app-content-actions">
        <form asp-controller="Usuarios" asp-action="Index" class="search-bar-container">
            <input class="search-bar" name="buscar" placeholder="Buscar por nombre, email, etc." type="text">
            <button type="submit" class="app-content-headerButton">Buscar</button>
        </form>
        <a asp-action="Create" class="app-content-headerButton btn btn-primary">Crear Nuevo Usuario</a>
    </div>

    <div class="products-area-wrapper tableView">
        <div class="products-header">
            <div class="product-cell name">Nombre</div>
            <div class="product-cell surname">Apellido</div>
            <div class="product-cell email">Email</div>
            <div class="product-cell phone">Teléfono</div>
            <div class="product-cell address">Dirección</div>
            <div class="product-cell role">Rol</div>
            <div class="product-cell actions">Acciones</div>
        </div>

        <div class="products-rows">
            @foreach (var item in Model)
            {
                <div class="products-row">
                    <div class="product-cell name">@item.Nombre</div>
                    <div class="product-cell surname">@item.Apellido</div>
                    <div class="product-cell email">@item.Email</div>
                    <div class="product-cell phone">@item.Telefono</div>
                    <div class="product-cell address">@item.Direccion</div>
                    <div class="product-cell role">@item.Rol</div>
                    <div class="product-cell actions">
                        <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdUsuario" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-danger btn-sm">Eliminar</a>
                    </div>
                </div>
            }
        </div>                                                           

    </div>
</div>
